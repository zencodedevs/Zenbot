@using Zenbot.Domain.Shared.Entities.Bot
@model IEnumerable<BotUserGuild>

@{
    ViewData["Title"] = "Boarding";
    Layout = "_PanelLayout";
    var counter = 1;
}

<div class="row g-3 my-2 bg-white pb-3">
    <div class="d-flex justify-content-between px-3">
        <div class="col-md-3">
            

        </div>

       

        <div class="col-md-4">
            <a href="#" class="text-dark">
                <div class=" custom-lightGray-bg shadow-sm d-flex justify-content-around align-items-center rounded py-2">
                    <div class="d-flex justify-content-around align-items-center">
                        <p class="fs-5 mb-0">Boarding Message Settings</p>
                        <i class="fas fa-birthday-cake fs-5 p-2"></i>
                    </div>
                </div>
            </a>

        </div>
    </div>

    <div class="p-4">
        <h5>All Servers</h5>
        <div class="p-4 border border-1 rounded-2">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Server Name</th>
                        <th scope="col">Join Date</th>
                        <th scope="col">Boarding Message Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <th scope="row">@counter</th>
                            <td>@item.Guild.GuildName</td>
                            <td>@item.Guild.JoinDate.ToString("MMM dd yyyy")</td>
                            <td><a asp-action="Edit" asp-controller="Boarding" asp-route-guildId="@item.GuildId" asp-route-guildName="@item.Guild.GuildName">
                                <i class="fas fa-cogs me-2"></i></a></td>
                        </tr>
                        counter++;
                    }

                  
                </tbody>
            </table>
        </div>

    </div>

</div>


  