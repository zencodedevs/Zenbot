@{
    Layout = "_BaseLayout";
}

@section Styles{
    <link rel="stylesheet" href="~/bundle/css/base-home.min.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
}

    @section Scripts{
    <script src="~/bundle/js/base-home.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
}

<header class="header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="@nameof(HomeController).GetControllerRoute()" asp-action="@nameof(HomeController.Index)">
                <img src="~/img/logo-white.png" alt="Logo" />
                <span>zenbot</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#homeNavbar" aria-controls="homeNavbar" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="homeNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="@nameof(HomeController).GetControllerRoute()" asp-action="@nameof(HomeController.Index)">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="@nameof(ErrorController).GetControllerRoute()" asp-action="@nameof(ErrorController.Code403)">Tutorials</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="@nameof(ErrorController).GetControllerRoute()" asp-action="@nameof(ErrorController.Code403)">Support</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="@nameof(PanelController).GetControllerRoute()" asp-action="@nameof(PanelController.Index)">Panel</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="@nameof(AccountController).GetControllerRoute()" asp-action="@nameof(AccountController.DiscordLogout)">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="@nameof(AccountController).GetControllerRoute()" asp-action="@nameof(AccountController.DiscordLogin)">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<section class="container flex-grow-1 py-5">
    @RenderBody()
</section>